<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        Width="800" Height="600" CanResize="False"
        x:Class="ZXBasicStudio.Dialogs.SplashScreen"
        Title="SplashScreen"
        Icon="/Assets/zxbs.ico"
        WindowStartupLocation="CenterScreen"
        SystemDecorations="None"
		    Topmost="True">
  <Border BorderBrush="Black" BorderThickness="2">
    <Grid RowDefinitions="*,Auto">
      <Image Grid.RowSpan="2" Source="/Assets/LogoBig.png"></Image>
      <StackPanel Orientation="Vertical" Grid.Row="1">
        <TextBlock Grid.Row="1">With ZX Graphics by DuefectuCorp</TextBlock>
        <TextBlock Name="txtVersion"/>
      </StackPanel>
    </Grid>
  </Border>
</Window>
